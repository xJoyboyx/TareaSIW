extends partials/layout

//- Override default config variables
append config
  - var parentMenu = 'Pages'
  - var pageTitle = '404 Error'
  - var isPageFullHeight = true


//- Navbar
block navbar
  include partials/navbar-solid


//- Page Content
block content
  .container.d-flex.flex-column.justify-content-center.pt-5.mt-n6(style='flex: 1 0 auto;')
    .pt-7.pb-5
      .text-center.mb-2.pb-4
        h1.mb-5
          +image('pages/404/404-text.svg', 'Error 404').d-inline-block
          span.sr-only Error 404
        h2 Page not found!
        p.pb-2 It seems we canâ€™t find the page you are looking for.
        a(href='index.html').btn.btn-translucent-primary.mr-3 Go to homepage
        span Or try
      .input-group-overlay.mx-auto(style='max-width: 390px;')
        .input-group-prepend-overlay
          span.input-group-text
            i.fe-search
        input(type='text' placeholder='Search').form-control.prepended-form-control


//- Footer
block footer
  include partials/footer-simple