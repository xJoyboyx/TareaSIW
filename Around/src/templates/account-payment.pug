                      a(href='#' data-toggle='tooltip' title='Edit').nav-link-style.mr-2
                        i.fe-edit
                      a(href='#' data-toggle='tooltip' title='Remove').nav-link-style.text-danger
                        .fe-trash-2
                  tr
                    td.py-3.align-middle
                      .media.align-items-center
                        +image('account/cards/card-visa.png', 'Visa')(width='39').mr-2
                        .media-body
                          span.font-weight-medium.text-heading.mr-1 Visa
                          | ending in 9791
                    td.py-3.align-middle Amanda Wilson
                    td.py-3.align-middle 05 / 2025
                    td.py-3.align-middle
                      a(href='#' data-toggle='tooltip' title='Edit').nav-link-style.mr-2
                        i.fe-edit
                      a(href='#' data-toggle='tooltip' title='Remove').nav-link-style.text-danger
                        .fe-trash-2
            hr.pb-4
