extends partials/layout

//- Override default config variables
append config
  - var vendorScripts = ['cleave.js/dist/cleave.min.js']
  - var parentMenu = 'Account'
  - var pageTitle = 'Account - Payment Methods'
  - var bodyBgColor = '#f7f7fc'

//- Navbar + Modal
block navbar
  include partials/modal-payment
  include partials/navbar-dashboard

//- Page Content
block content

  // Slanted background
  .position-relative.bg-gradient(style='height: 480px;')
    .cs-shape.cs-shape-bottom.cs-shape-slant.bg-secondary.d-none.d-lg-block
      svg(xmlns='http://www.w3.org/2000/svg' viewBox='0 0 3000 260')
        polygon(fill='currentColor' points='0,257 0,260 3000,260 3000,0')


  // Page content
  .container.bg-overlay-content.pb-4.mb-md-3(style='margin-top: -350px;')
    .row

      // Sidebar
      .col-lg-4.mb-4.mb-lg-0
        //- Include sidebar-account.pug partial
        include partials/sidebar-account


      // Content
      .col-lg-8
        .d-flex.flex-column.h-100.bg-light.rounded-lg.box-shadow-lg.p-4
          .py-2.p-md-3

            // Title
            h1.h3.mb-3.pb-2.text-center.text-sm-left Payment methods

            // Alert
            .alert.alert-info.font-size-sm.mb-4(role='alert')
              i.fe-alert-circle.font-size-lg.mt-n1.mr-2
              | Primary payment method is used by default

            // Payment methods (table)
            .table-responsive.font-size-md
              table.table.table-hover.mb-0
                thead
                  tr
                    th Your credit / debit cards
                    th Name on card
                    th Expires on
                    th
                tbody
                  tr
                    td.py-3.align-middle
                      .media.align-items-center
                        +image('account/cards/card-visa.png', 'Visa')(width='39').mr-2
                        .media-body
                          span.font-weight-medium.text-heading.mr-1 Visa
                          | ending in 4999
                          span.align-middle.badge.badge-info.ml-2 Primary
                    td.py-3.align-middle Amanda Wilson
                    td.py-3.align-middle 08 / 2023
                    td.py-3.align-middle
                      a(href='#' data-toggle='tooltip' title='Edit').nav-link-style.mr-2
                        i.fe-edit
                      a(href='#' data-toggle='tooltip' title='Remove').nav-link-style.text-danger
                        .fe-trash-2
                  tr
                    td.py-3.align-middle
                      .media.align-items-center
                        +image('account/cards/card-master.png', 'MasterCard')(width='39').mr-2
                        .media-body
                          span.font-weight-medium.text-heading.mr-1 MasterCard
                          | ending in 0015
                    td.py-3.align-middle Amanda Wilson
                    td.py-3.align-middle 11 / 2024
                    td.py-3.align-middle
                      a(href='#' data-toggle='tooltip' title='Edit').nav-link-style.mr-2
                        i.fe-edit
                      a(href='#' data-toggle='tooltip' title='Remove').nav-link-style.text-danger
                        .fe-trash-2
                  tr
                    td.py-3.align-middle
                      .media.align-items-center
                        +image('account/cards/card-paypal.png', 'PayPal')(width='39').mr-2
                        .media-body
                          span.font-weight-medium.text-heading.mr-1 PayPal
                          | a.wilson@example.com
                    td.py-3.align-middle &mdash;
                    td.py-3.align-middle &mdash;
                    td.py-3.align-middle
                      a(href='#' data-toggle='tooltip' title='Edit').nav-link-style.mr-2
                        i.fe-edit
                      a(href='#' data-toggle='tooltip' title='Remove').nav-link-style.text-danger
                        .fe-trash-2
                  tr
                    td.py-3.align-middle
                      .media.align-items-center
                        +image('account/cards/card-visa.png', 'Visa')(width='39').mr-2
                        .media-body
                          span.font-weight-medium.text-heading.mr-1 Visa
                          | ending in 6073
                    td.py-3.align-middle Amanda Wilson
