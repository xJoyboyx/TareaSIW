            .d-sm-flex.align-items-center.justify-content-between.pb-2.text-center.text-sm-left
              h1.h3.mb-3.text-nowrap
                | Your messages
                span.d-inline-block.align-middle.bg-faded-success.text-success.font-size-ms.font-weight-medium.rounded-sm.py-1.px-2.ml-2 1
              .mb-3
                a(href='#message-compose' data-toggle='collapse').btn.btn-translucent-primary
                  i.fe-plus.mr-2
                  | Compose
            
            // Message compose form
            #message-compose.collapse
              form(novalidate).needs-validation.box-shadow.rounded.mb-4
                .d-flex.align-items-center.justify-content-between.bg-dark.rounded-top.py-3.px-4
                  h3.font-size-base.text-light.mb-0 New message
                  a(href='#message-compose' data-toggle='collapse').close.text-light &times;
                .p-4
                  .form-group
                    input(type='text' placeholder='To' required).form-control
                    .invalid-feedback Please provide recipient(s) of your message!
                  .form-group
                    input(type='text' placeholder='Subject').form-control.bg-image-0
                  .form-group
                    textarea(rows='5' required).form-control
                    .invalid-feedback Please write your message!
                  button(type='submit').btn.btn-primary
                    i.fe-send.font-size-lg.mr-2
                    | Send
            
            // Toolbar
            .d-flex.align-items-center.justify-content-between.bg-secondary.py-2.px-3
              .py-1
                .custom-control.custom-checkbox
