extends partials/layout

//- Override default config variables
append config
  - var parentMenu = 'Account'
  - var pageTitle = 'Dashboard - Reviews'
  - var bodyBgColor = '#f7f7fc'

//- Navbar
block navbar
  include partials/navbar-dashboard

//- Page Content
block content

  // Slanted background
  .position-relative.bg-gradient(style='height: 480px;')
    .cs-shape.cs-shape-bottom.cs-shape-slant.bg-secondary.d-none.d-lg-block
      svg(xmlns='http://www.w3.org/2000/svg' viewBox='0 0 3000 260')
        polygon(fill='currentColor' points='0,257 0,260 3000,260 3000,0')


  // Page content
  .container.bg-overlay-content.pb-4.mb-md-3(style='margin-top: -350px;')
    .row

      // Sidebar
      .col-lg-4.mb-4.mb-lg-0
        //- Include sidebar-account.pug partial
        include partials/sidebar-account


      // Content
      .col-lg-8
        .d-flex.flex-column.h-100.bg-light.rounded-lg.box-shadow-lg.p-4
          .py-2.p-md-3

            // Title + Filters
            .d-sm-flex.align-items-center.justify-content-between.pb-3.text-center.text-sm-left
              h1.h3.mb-3.text-nowrap
                | Reviews
                span.d-inline-block.align-middle.bg-faded-dark.font-size-ms.font-weight-medium.rounded-sm.py-1.px-2.ml-2 15
              .d-flex.align-items-center.mb-3
                label.text-nowrap.pr-1.mr-2.mb-0 Sort by
                select.form-control.custom-select.custom-select-sm
                  option Newest
                  option Oldest
                  option High rating
                  option Low rating
                        
            
            // Overall statistics
            .row.mb-4.pb-3
              .col-md-4.col-sm-5.mb-3.mb-sm-0
                .d-flex.align-items-center
                  .text-heading.mr-2 Vendor rating:
                  +star-rating(4).star-rating-lg
                .pt-2.font-size-sm.text-muted 4.2 based on 15 reviews
              .col-md-8.col-sm-7
                .d-flex.align-items-center.mb-2
                  .text-nowrap.mr-3
                    span.d-inline-block.align-middle 5
                    i.fe-star.font-size-sm.ml-1
                  .w-100
                    .progress(style='height: 4px;')
                      .progress-bar.bg-success(role='progressbar' style='width: 47%;' aria-valuenow='60' aria-valuemin='0' aria-valuemax='100')
                  span.ml-3 7
                .d-flex.align-items-center.mb-2
                  .text-nowrap.mr-3
                    span.d-inline-block.align-middle 4
                    i.fe-star.font-size-sm.ml-1
                  .w-100
                    .progress(style='height: 4px;')
                      .progress-bar(role='progressbar' style='width: 20%; background-color: #a7e453;' aria-valuenow='27' aria-valuemin='0' aria-valuemax='100')
                  span.ml-3 3
                .d-flex.align-items-center.mb-2
                  .text-nowrap.mr-3
                    span.d-inline-block.align-middle 3
                    i.fe-star.font-size-sm.ml-1
                  .w-100
                    .progress(style='height: 4px;')
                      .progress-bar(role='progressbar' style='width: 14%; background-color: #ffda75;' aria-valuenow='17' aria-valuemin='0' aria-valuemax='100')
                  span.ml-3 2
                .d-flex.align-items-center.mb-2
                  .text-nowrap.mr-3
                    span.d-inline-block.align-middle 2
                    i.fe-star.font-size-sm.ml-1
                  .w-100
                    .progress(style='height: 4px;')
                      .progress-bar.bg-warning(role='progressbar' style='width: 14%;' aria-valuenow='9' aria-valuemin='0' aria-valuemax='100')
                  span.ml-3 2
                .d-flex.align-items-center
                  .text-nowrap.mr-3
                    span.d-inline-block.align-middle 1
                    i.fe-star.font-size-sm.ml-1
                  .w-100
                    .progress(style='height: 4px;')
                      .progress-bar.bg-danger(role='progressbar' style='width: 7%;' aria-valuenow='4' aria-valuemin='0' aria-valuemax='100')
                  span.ml-3 1


            // Review
            .pb-grid-gutter.border-bottom
              .d-sm-flex.align-items-center.mb-2.pb-1
                +star-rating(5).star-rating-lg.mb-3.mb-sm-0.mr-sm-2
                .d-flex.align-items-center
                  span.font-size-sm.mr-2 for
                  h6.nav-heading.mb-0
                    a(href='#') Mom High Waist Shorts
