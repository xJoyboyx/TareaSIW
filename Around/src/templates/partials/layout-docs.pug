//- Include config.pug file that holds all variables
block config
  include ../helpers/config

//- Mixins - reusable code snippets
include ../helpers/mixins

//- Override default config variables
append config
  - var isPageLoading = false
  - var isNestedFile = true

doctype html
html(lang="en")

  //- head.pug template
  include head 
  
  // Body
  body
    
    main.container-fluid

      // Main content
      section.cs-offcanvas-enabled.row.pb-3.pb-md-4
        .col-xl-9

          // Navbar
          header(data-scroll-header).navbar.navbar-expand.navbar-light.fixed-top.navbar-box-shadow.bg-light.px-3.px-lg-4
            a(href='dev-setup.html').navbar-brand.d-lg-none
              +image('logo/logo-icon.png', 'Around')(width='58')
            button(type='button' data-toggle='offcanvas' data-offcanvas-id='docsNav').navbar-toggler.d-block.d-lg-none.mr-3.ml-auto
              span.navbar-toggler-icon
            ul.navbar-nav.ml-auto.d-none.d-lg-flex
              li.nav-item
                a(href='../index.html').nav-link
                  i.fe-eye.align-middle.mt-n1.mr-2
                  | Live preview
              li.nav-item: .nav-link.disabled.text-border.px-1 |
              li.nav-item
                a(href='../components/typography.html').nav-link
                  i.fe-layers.align-middle.mt-n1.mr-2
                  | Components
              li.nav-item: .nav-link.disabled.text-border.px-1 |
            a(href='https://themes.getbootstrap.com/product/around-multipurpose-template-ui-kit/' target='_blank' rel='noopener').btn.btn-primary.btn-shadow.ml-lg-4
              i.fe-shopping-cart.mr-2.d-none.d-sm-inline-block
              | Buy now
          
          // Side navigation (Off-canvas)
          aside#docsNav.cs-offcanvas.cs-offcanvas-collapse.bg-dark
            .cs-offcanvas-cap.bg-darker.d-none.d-lg-block.py-2
              a(href='dev-setup.html').navbar-brand.py-1
                +image('logo/logo-light.png', 'Around')(width='153')
              span.badge.badge-info Docs
            .cs-offcanvas-cap.bg-darker.d-flex.d-lg-none
              .d-flex.align-items-center.mt-1
                h5.text-light.mb-0.mr-3 Menu
                span.badge.badge-info Docs
              button(type='button' data-toggle='offcanvas' data-offcanvas-id='docsNav').close.text-light.lead
                span(aria-hidden='true') &times;
            .d-flex.d-lg-none.align-items-center.py-4.px-3.border-bottom.border-light
              a(href='../index.html').btn.btn-outline-light.btn-block.btn-sm.mr-2
                i.fe-eye.mr-2
                | Preview
              a(href='../components/typography.html').btn.btn-outline-light.btn-block.btn-sm.mt-0
                i.fe-layers.mr-2
                | Components
            .cs-offcanvas-body.pt-4.pb-grid-gutter(data-simplebar data-simplebar-inverse)
              h6.text-light.pt-2.pb-2.border-bottom.border-light Contents
              a(href='dev-setup.html')&attributes(pageTitle === 'Dev environment setup' ? {'class': 'nav-link-style nav-link-light font-size-sm active'} : {'class': 'nav-link-style nav-link-light font-size-sm'})
                | Dev environment setup
              a(href='working-with-gulp.html')&attributes(pageTitle === 'Working with Gulp' ? {'class': 'nav-link-style nav-link-light font-size-sm active'} : {'class': 'nav-link-style nav-link-light font-size-sm'})
                | Working with Gulp
              a(href='project-structure.html')&attributes(pageTitle === 'Project structure' ? {'class': 'nav-link-style nav-link-light font-size-sm active'} : {'class': 'nav-link-style nav-link-light font-size-sm'})
                | Project structure
              a(href='install-vendor-plugin.html')&attributes(pageTitle === 'Installing Vendor plugins with npm and Gulp' ? {'class': 'nav-link-style nav-link-light font-size-sm active'} : {'class': 'nav-link-style nav-link-light font-size-sm'})
                | Installing Vendor plugins with npm and Gulp
              a(href='using-preprocessors.html')&attributes(pageTitle === 'Using Pug & Sass' ? {'class': 'nav-link-style nav-link-light font-size-sm active'} : {'class': 'nav-link-style nav-link-light font-size-sm'})
                | Using Pug &amp; Sass
              a(href='autoprefixer.html')&attributes(pageTitle === 'Browser support' ? {'class': 'nav-link-style nav-link-light font-size-sm active'} : {'class': 'nav-link-style nav-link-light font-size-sm'})
                | Browser support
              a(href='global-colors.html')&attributes(pageTitle === 'Global colors' ? {'class': 'nav-link-style nav-link-light font-size-sm active'} : {'class': 'nav-link-style nav-link-light font-size-sm'})
                | Global colors
              a(href='components.html')&attributes(pageTitle === 'Components' ? {'class': 'nav-link-style nav-link-light font-size-sm active'} : {'class': 'nav-link-style nav-link-light font-size-sm'})
                | Components
              a(href='navbar-footer.html')&attributes(pageTitle === 'Navbar and Footer templates (Pug)' ? {'class': 'nav-link-style nav-link-light font-size-sm active'} : {'class': 'nav-link-style nav-link-light font-size-sm'})
                | Navbar / Footer variants (Pug)
              a(href='utilities.html')&attributes(pageTitle === 'Utility classes' ? {'class': 'nav-link-style nav-link-light font-size-sm active'} : {'class': 'nav-link-style nav-link-light font-size-sm'})
                | Utility classes
              a(href='ui-icons.html')&attributes(pageTitle === 'UI icons (Icon font)' ? {'class': 'nav-link-style nav-link-light font-size-sm active'} : {'class': 'nav-link-style nav-link-light font-size-sm'})
                | UI icons (Icon font)
              a(href='mailchimp.html')&attributes(pageTitle === 'Mailchimp subscription form' ? {'class': 'nav-link-style nav-link-light font-size-sm active'} : {'class': 'nav-link-style nav-link-light font-size-sm'})
                | Mailchimp subscription form
              a(href='credits.html')&attributes(pageTitle === 'Sources and credits' ? {'class': 'nav-link-style nav-link-light font-size-sm active'} : {'class': 'nav-link-style nav-link-light font-size-sm'})
                | Sources and credits
              a(href='changelog.html')&attributes(pageTitle === 'Changelog' ? {'class': 'nav-link-style nav-link-light font-size-sm active'} : {'class': 'nav-link-style nav-link-light font-size-sm'})
                | Changelog


          // Page title
          .border-bottom.pt-5.pb-2.mt-2.mb-5
            h1.mt-4.pt-5 !{pageTitle}

          
          block content


    // Back to top button
    a(href='#top' data-scroll).btn-scroll-top
      span.btn-scroll-top-tooltip.text-muted.font-size-sm.mr-2 Top
      i.btn-scroll-top-icon.fe-arrow-up    
    
    // Vendor scrits: js libraries and plugins
    +vendor-scripts

    // Main theme script
    script()&attributes(isNestedFile ? {'src': '../js/theme.min.js'} : {'src': 'js/theme.min.js'})
