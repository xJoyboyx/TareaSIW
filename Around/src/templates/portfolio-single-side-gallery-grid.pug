extends partials/layout

//- Override default config variables
append config
  - var vendorStyles = [ 'tiny-slider/dist/tiny-slider.css', 'lightgallery.js/dist/css/lightgallery.min.css']
  - var vendorScripts = ['tiny-slider/dist/min/tiny-slider.js', 'lightgallery.js/dist/js/lightgallery.min.js', 'lg-fullscreen.js/dist/lg-fullscreen.min.js', 'lg-zoom.js/dist/lg-zoom.min.js']
  - var parentMenu = 'Templates'
  - var pageTitle = 'Project Side Gallery (Grid)'

//- Navbar
block navbar
  include partials/navbar-floating-dark

//- Page Content
block content
  section.cs-sidebar-enabled.cs-sidebar-right
    .container
      .row

        // Project description
        .col-lg-4.cs-sidebar.pt-5.pt-lg-7.order-lg-2
          .px-sm-4.pt-6.py-lg-6
            h1.h2 Toothbrush Product Design (3D)
            .d-sm-flex.alitgn-itams-center.pt-3.pb-2.mb-5.border-bottom.font-size-sm
              .d-flex.align-items-center.mb-3
                .text-nowrap.text-muted.mr-3
                  i.fe-calendar.mr-1
                  span Aug 28, 2020
                .text-nowrap.text-muted
                  i.fe-tag.mr-1
                  span 3D Modelling
              a(href='#gallery' data-scroll).btn.btn-translucent-primary.btn-sm.ml-auto.mb-3.d-inline-block.d-lg-none Project Gallery
            h3.h5 Client
            ul.list-unstyled.font-size-md.mb-4.pb-2
              li.mb-2
                | Name:
                span.font-weight-medium.text-nav.ml-2 International Company Ltd.
              li.mb-2
                | Services:
                span.font-weight-medium.text-nav.ml-2 3D Modelling, Product Design
              li
                | Website:
                a(href='#').nav-link-style.ml-2 https://example.com
            h3.h5 Objective
            p.font-size-sm.mb-4.pb-2 Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi.
            h3.h5 Tools &amp; Technologies
            p.font-size-sm.mb-4.pb-2 Cinema 4D, Adobe Photoshop
            h3.h5 Challenge
            p.font-size-sm.mb-4.pb-2 Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam, eaque ipsa quae ab illo inventore veritatis et quasi architecto beatae vitae dicta sunt explicabo. Nemo enim ipsam voluptatem quia voluptas sit aspernatur aut odit aut fugit, sed quia consequuntur magni dolores.
            h3.h5 Share
            a(href='#').social-btn.sb-outline.sb-facebook.mr-2.my-2
              i.fe-facebook
            a(href='#').social-btn.sb-outline.sb-twitter.mr-2.my-2
              i.fe-twitter
            a(href='#').social-btn.sb-outline.sb-google.mr-2.my-2
              i.fe-google
            a(href='#').social-btn.sb-outline.sb-pinterest.my-2
              i.fe-pinterest
        

        // Project gallery (Grid)
        #gallery.col-lg-8.cs-content.pt-2.pt-lg-7.pb-lg-4.order-lg-1
          .cs-gallery.row.pt-5.pb-4.py-lg-5
            .col-sm-6.mb-grid-gutter
              a(href='img/portfolio/single/01.jpg').cs-gallery-item.rounded-lg
                +image('portfolio/single/th01.jpg', 'Gallery thumbnail')
            .col-sm-6.mb-grid-gutter
              a(href='img/portfolio/single/02.jpg').cs-gallery-item.rounded-lg
                +image('portfolio/single/th02.jpg', 'Gallery thumbnail')
            .col-sm-6.mb-grid-gutter
              a(href='img/portfolio/single/03.jpg').cs-gallery-item.rounded-lg
                +image('portfolio/single/th03.jpg', 'Gallery thumbnail')
            .col-sm-6.mb-grid-gutter
              a(href='img/portfolio/single/04.jpg').cs-gallery-item.rounded-lg
                +image('portfolio/single/th04.jpg', 'Gallery thumbnail')
            .col-sm-6.mb-grid-gutter
              a(href='img/portfolio/single/05.jpg').cs-gallery-item.rounded-lg
                +image('portfolio/single/th05.jpg', 'Gallery thumbnail')
            .col-sm-6.mb-grid-gutter
              a(href='img/portfolio/single/06.jpg').cs-gallery-item.rounded-lg
                +image('portfolio/single/th06.jpg', 'Gallery thumbnail')
  
  
  // Related projects (Carousel)
  section.border-top.py-5.py-lg-6
