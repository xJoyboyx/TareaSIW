extends partials/layout

//- Override default config variables
append config
  - var parentMenu = 'Account'
  - var pageTitle = 'Sign In / Sign Up'

//- Navbar
block navbar
  include partials/navbar-solid

//- Page Content
block content
  .container.py-5.py-md-7
    .row.align-items-center.pt-2
      .col-md-6.col-lg-5.mb-5.mb-md-0
        .bg-secondary.px-4.py-5.p-sm-5.rounded-lg
          h1.h3.pt-1 Sign in
          p.font-size-ms.text-muted Sign in to your account using email and password provided during registration.
          form(novalidate).needs-validation
            .input-group-overlay.form-group
              .input-group-prepend-overlay
                span.input-group-text
                  i.fe-mail
              input(type='email' placeholder='Email' required).form-control.prepended-form-control
            .input-group-overlay.cs-password-toggle.form-group
              .input-group-prepend-overlay
                span.input-group-text
                  i.fe-lock
              input(type='password' placeholder='Password' required).form-control.prepended-form-control
              label.cs-password-toggle-btn
                input(type='checkbox').custom-control-input
                i.fe-eye.cs-password-toggle-indicator
                span.sr-only Show password
            .d-flex.justify-content-between.align-items-center.form-group
              .custom-control.custom-checkbox
                input(type='checkbox' id='keep-signed-2').custom-control-input
                label(for='keep-signed-2').custom-control-label Keep me signed in
              a(href='password-recovery.html').nav-link-style.font-size-ms Forgot password?
            button(type='submit').btn.btn-primary.btn-block Sign in
            .border-top.text-center.mt-4.pt-4
              p.font-size-sm.font-weight-medium.text-heading Or sign in with
              a(href='#').social-btn.sb-facebook.sb-outline.sb-lg.mx-1.mb-2
                i.fe-facebook
              a(href='#').social-btn.sb-twitter.sb-outline.sb-lg.mx-1.mb-2
                i.fe-twitter
              a(href='#').social-btn.sb-instagram.sb-outline.sb-lg.mx-1.mb-2
                i.fe-instagram
              a(href='#').social-btn.sb-google.sb-outline.sb-lg.mx-1.mb-2
                i.fe-google

      .col-md-6.offset-lg-1
        h2.h3 No account? Sign up
        p.font-size-ms.text-muted Registration takes less than a minute but gives you full control over your orders.
        form(novalidate).row.needs-validation
          .col-sm-6.form-group
            label(for='reg-fn').form-label
              | First name
              sup.text-danger.ml-1 *
            input(type='text' required)#reg-fn.form-control
            .invalid-feedback Please enter you first name!
          .col-sm-6.form-group
            label(for='reg-ln').form-label
              | Last name
              sup.text-danger.ml-1 *
            input(type='text' required)#reg-ln.form-control
            .invalid-feedback Please enter you last name!
          .col-sm-6.form-group
            label(for='reg-email').form-label
              | Email address
              sup.text-danger.ml-1 *
            input(type='email' required)#reg-email.form-control
            .invalid-feedback Please enter a valid email address!
          .col-sm-6.form-group
            label(for='reg-phone').form-label Phone number
            input(type='text')#reg-phone.form-control.bg-image-0
          .col-sm-6.form-group
            label(for='reg-password').form-label
              | Password
              sup.text-danger.ml-1 *
            input(type='password' required)#reg-password.form-control
            .invalid-feedback Please provide password!
          .col-sm-6.form-group
            label(for='reg-confirm-password').form-label
              | Confirm password
              sup.text-danger.ml-1 *
            input(type='password' required)#reg-confirm-password.form-control
            .invalid-feedback Password doesn't match!
          .col-sm-6.pt-2
            button(type='submit').btn.btn-primary.btn-block Sign up


//- Footer
block footer
  include partials/footer-simple